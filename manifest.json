{
    "name": "QuickGPT",
    "version": "1.0",
    "manifest_version": 2,
    "description": "A Chrome extension that shows answers from ChatGPT when text is highlighted",
    "permissions": [
        "activeTab",
        "https://*/*",
        "http://*/*"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "QuickGPT"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ],
            "css": [
                "tooltip.css"
            ]
        }
    ]
}